<UserControl x:Class="LLPlayer.Controls.Settings.SettingsMouse"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LLPlayer.Controls.Settings"
             xmlns:vm="clr-namespace:LLPlayer.ViewModels"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SettingsDialogVM}"
             d:Foreground="White"
             d:Background="Black"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock
                Text="Mouse"
                FontSize="24"
                FontWeight="Bold"
                Margin="0 0 0 16" />

            <GroupBox Header="Mouse">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180"
                            Text="Single Click to Play/Pause" />
                        <ToggleButton
                            IsChecked="{Binding FL.Config.MouseSingleClickToPlay}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180"
                            Text="Double Click to FullScreen" />
                        <ToggleButton
                            IsChecked="{Binding FL.Config.MouseDoubleClickToFullScreen}" />
                    </StackPanel>

                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180"
                            Text="Wheel to Volume Up/Down" />
                        <ToggleButton
                            IsChecked="{Binding FL.Config.MouseWheelToVolumeUpDown}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
