<UserControl x:Class="LLPlayer.Controls.Settings.SettingsThemes"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:LLPlayer.Controls.Settings"
             xmlns:vm="clr-namespace:LLPlayer.ViewModels"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controls="clr-namespace:LLPlayer.Controls.Settings.Controls"
             xmlns:helpers="clr-namespace:LLPlayer.Extensions"
             mc:Ignorable="d"
             d:DataContext="{d:DesignInstance vm:SettingsDialogVM}"
             d:Foreground="White"
             d:Background="Black"
             d:DesignHeight="450" d:DesignWidth="800">
    <ScrollViewer>
        <StackPanel>
            <TextBlock
                Text="Themes"
                FontSize="24"
                FontWeight="Bold"
                Margin="0 0 0 16" />

            <GroupBox Header="Themes">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                        <TextBlock
                            Width="180"
                            Text="Primary Color" />
                        <Button
                            Background="{x:Null}"
                            Padding="0"
                            BorderThickness="0"
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                            <Button.CommandParameter>
                                <controls:ColorPicker PickerColor="{Binding FL.Config.Theme.PrimaryColor, Mode=TwoWay}" />
                            </Button.CommandParameter>
                            <Rectangle
                                Fill="{Binding FL.Config.Theme.PrimaryColor, Converter={StaticResource ColorToBrushConv}}"
                                Width="30"
                                Height="30" />
                        </Button>
                        <TextBlock Margin="10 0 0 0" Text="#" />
                        <TextBox Width="55" MaxLength="6" helpers:TextBoxMiscHelper.IsHexValidationEnabled="True">
                            <TextBox.Text>
                                <Binding
                                    Path="FL.Config.Theme.PrimaryColor"
                                    Converter="{StaticResource ColorToHexConv}"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <StaticResource ResourceKey="ColorHexRule" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0 0 0 16">
                        <TextBlock
                            Width="180"
                            Text="Secondary Color" />
                        <Button
                            Background="{x:Null}"
                            Padding="0"
                            BorderThickness="0"
                            Command="{x:Static materialDesign:DialogHost.OpenDialogCommand}">
                            <Button.CommandParameter>
                                <controls:ColorPicker PickerColor="{Binding FL.Config.Theme.SecondaryColor, Mode=TwoWay}" />
                            </Button.CommandParameter>
                            <Rectangle
                                Fill="{Binding FL.Config.Theme.SecondaryColor, Converter={StaticResource ColorToBrushConv}}"
                                Width="30"
                                Height="30" />
                        </Button>
                        <TextBlock Margin="10 0 0 0" Text="#" />
                        <TextBox Width="55" MaxLength="6" helpers:TextBoxMiscHelper.IsHexValidationEnabled="True">
                            <TextBox.Text>
                                <Binding
                                    Path="FL.Config.Theme.SecondaryColor"
                                    Converter="{StaticResource ColorToHexConv}"
                                    UpdateSourceTrigger="PropertyChanged">
                                    <Binding.ValidationRules>
                                        <StaticResource ResourceKey="ColorHexRule" />
                                    </Binding.ValidationRules>
                                </Binding>
                            </TextBox.Text>
                        </TextBox>
                    </StackPanel>
                </StackPanel>
            </GroupBox>

            <GroupBox Header="OS">
                <StackPanel>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock
                            Width="180">
                            Dark Title Bar
                            <InlineUIContainer BaselineAlignment="Center" Cursor="Help">
                                <ToolTipService.ToolTip>
                                    <TextBlock
                                        Text="Required to restart to apply changes"
                                        TextWrapping="Wrap"
                                        MaxWidth="400" />
                                </ToolTipService.ToolTip>
                                <materialDesign:PackIcon
                                    Kind="Information"
                                    Width="16" Height="16"
                                    Margin="4 0 0 0" />
                            </InlineUIContainer>
                        </TextBlock>
                        <ToggleButton
                            IsChecked="{Binding FL.Config.IsDarkTitlebar}" />
                    </StackPanel>
                </StackPanel>
            </GroupBox>

        </StackPanel>
    </ScrollViewer>
</UserControl>
